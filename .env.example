# Application Configuration
PROJECT_NAME=Calndr API
VERSION=1.0.0
DESCRIPTION=Family Calendar Management API
APP_ENV=development

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Database Configuration
DB_USER=calndr_user
DB_PASSWORD=calndr_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calndr

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5

# Cache TTL settings (in seconds)
CACHE_TTL_WEATHER_FORECAST=3600
CACHE_TTL_WEATHER_HISTORIC=259200
CACHE_TTL_EVENTS=900
CACHE_TTL_CUSTODY=7200
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_FAMILY_DATA=1800

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# Push Notifications
SNS_PLATFORM_APPLICATION_ARN=your_sns_platform_application_arn

# External APIs
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Email Configuration (SMTP)
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_HOST=your_smtp_host
SMTP_PORT=587

# Apple Sign-In Configuration
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key_content
APPLE_REDIRECT_URI=http://localhost:8000/auth/apple/callback

# Google Sign-In Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Facebook Configuration (Optional)
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret
